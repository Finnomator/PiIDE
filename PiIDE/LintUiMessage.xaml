<UserControl x:Class="PiIDE.LintUiMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="TypeLabel"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <Label Grid.Column="2" x:Name="MessageLabel"/>
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
        <GridSplitter Grid.Column="5" HorizontalAlignment="Stretch"/>
        <GridSplitter Grid.Column="7" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
