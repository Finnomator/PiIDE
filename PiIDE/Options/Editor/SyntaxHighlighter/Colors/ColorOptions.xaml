<UserControl x:Class="PiIDE.Options.Editor.SyntaxHighlighter.Colors.ColorOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE.Options.Editor.SyntaxHighlighter.Colors"
             mc:Ignorable="d" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="{StaticResource SplitterBackgroundBrush}">
        <StackPanel>
            <StackPanel Name="MainStackPanel"/>
            <Separator Background="{StaticResource SplitterBackgroundBrush}"/>
        </StackPanel>
    </Border>
</UserControl>
