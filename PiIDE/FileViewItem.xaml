<UserControl x:Class="PiIDE.FileViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="MainButton" Content="FileName" Click="MainButton_Click" HorizontalContentAlignment="Left" Padding="1,0,1,0" Background="#00DDDDDD" BorderThickness="0"/>
        <StackPanel x:Name="MainStackPanel" Grid.Row="1"/>
    </Grid>
</UserControl>
