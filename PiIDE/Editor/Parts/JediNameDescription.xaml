<UserControl x:Class="PiIDE.Editor.Parts.JediNameDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE.Editor.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseLeave="Control_MouseLeave">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Border BorderThickness="1" BorderBrush="Gray">
            <StackPanel Background="White">
                <WrapPanel>
                    <TextBlock Text="("/>
                    <TextBlock x:Name="TypeTextBlock" Text="Type"/>
                    <TextBlock Text=") "/>
                    <TextBlock x:Name="NameTextBlock" Text="Name"/>
                    <TextBlock x:Name="TypeHintSeperatorTextBlock" Text=": "/>
                    <TextBlock x:Name="TypeHintTextBlock" Text="TypeHint"/>
                </WrapPanel>
                <Separator x:Name="DocstringSeperator"/>
                <TextBlock x:Name="DocstringTextBlock" Text="Docstring"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
        
</UserControl>
