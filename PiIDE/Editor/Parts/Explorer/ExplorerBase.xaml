<UserControl x:Class="PiIDE.Editor.Parts.Explorer.ExplorerBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE.Editor.Parts.Explorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="Header" Foreground="White" VerticalContentAlignment="Center"/>

        <Rectangle Height="2" VerticalAlignment="Bottom" Fill="{StaticResource PanelBackgroundBrush}"/>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="DirectoryItemsWrapPanel"  Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</UserControl>
