<UserControl x:Class="PiIDE.PylingUnderliner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <VisualBrush x:Key="asdf" ViewportUnits="Absolute" Viewport="0,2,6,3.7" TileMode="Tile" Stretch="Uniform">
            <VisualBrush.Visual>
                <Path Data="M 0,0 0.4,0 1.4,1, 1.8,1 2.8,0 3.2,0" Stroke="Red" StrokeThickness="0.5"/>
            </VisualBrush.Visual>
        </VisualBrush>
    </UserControl.Resources>
    <Grid x:Name="MainGrid" IsHitTestVisible="False">
        <!--
        <Line X2="200" Stroke="{Binding Mode=OneWay, Source={StaticResource asdf}}" StrokeThickness="10" />
        <TextBlock Text="asdf"/>
        -->
    </Grid>
</UserControl>
