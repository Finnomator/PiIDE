<UserControl x:Class="PiIDE.PylingUnderliner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <VisualBrush x:Key="asdf" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,10,10" Viewbox="0,0,1,2">
            <VisualBrush.Visual>
                <Path Data="M 0,1 1,1 1,2 2,2 2,1 3,1" Stroke="Red" StrokeThickness="0.2" StrokeEndLineCap="Square" StrokeStartLineCap="Square" />
            </VisualBrush.Visual>
        </VisualBrush>
    </UserControl.Resources>
    <Grid x:Name="MainGrid" IsHitTestVisible="False">
        <!--
        <Line X2="200" Stroke="{Binding Mode=OneWay, Source={StaticResource asdf}}" StrokeThickness="10" />
        <TextBlock Text="asdf"/>
        -->
    </Grid>
</UserControl>
