<UserControl x:Class="PiIDE.LintMessagesWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d"
             d:DesignWidth="800">

    <ListView d:ItemsSource="{d:SampleData ItemCount=5}" x:Name="MainListView">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}"/>
                <GridViewColumn Header="Code" DisplayMemberBinding="{Binding MessageId}"/>
                <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}"/>
                <GridViewColumn Header="File" DisplayMemberBinding="{Binding Module}"/>
                <GridViewColumn Header="Line" DisplayMemberBinding="{Binding Line}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
