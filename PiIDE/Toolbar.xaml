<UserControl x:Class="PiIDE.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             xmlns:logo="clr-namespace:PiIDE.Assets.Icons"
             mc:Ignorable="d" Height="25">
    <StackPanel Orientation="Horizontal" Background="#FF1F1F1F">
        <logo:Logo Height="16" Margin="7,0,7,0"/>
        <Button Style="{StaticResource CleanButtonStyle}" Content="Options" Click="OptionsButton_Click" Foreground="White" Padding="7,1,7,1"/>
    </StackPanel>
</UserControl>
