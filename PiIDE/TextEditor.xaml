<UserControl x:Class="PiIDE.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiIDE"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" PreviewKeyDown="TextEditor_PreviewKeyDown">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="NumsScrollViewer" VerticalScrollBarVisibility="Disabled">
            <TextBlock x:Name="NumsTextBlock" FontSize="14" FontFamily="Cascadia Code"/>
        </ScrollViewer>
        
        <Grid x:Name="TextEditorGrid" Grid.Column="1">
            <TextBox x:Name="TextEditorTextBox" TextChanged="TextEditorTextBox_TextChangedAsync" FontFamily="Cascadia Code" AcceptsReturn="True" AcceptsTab="True" FontSize="14"/>
            <Canvas x:Name="CompletionsContainerCanvas" Panel.ZIndex="1"/>
        </Grid>
    </Grid>
</UserControl>
